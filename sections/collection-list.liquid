<section id="collection-icon-section" class="uk-section" hidden>
  <div class="uk-container" style="min-height: 748px">
    {% assign shop_url = shop.url %}
    {% assign icon_image_base_url =  'collection_' %}
    {% assign collection_path_base_url =  shop_ur | append: '/collections/' %}
    {% assign product_path_base_url = shop_ur | append: '/products/' %}

    {% assign actuator_suffix =  '-actuators' %}
    {% assign lift_suffix =  '-lifts' %}
    {% if section.settings.filter_enable == true %}
      {% assign has_filter = true %}
      {% assign has_border = '' %}
    {% else %}
      {% assign has_filter = false %}
      {% assign has_border = 'fg-heading-border fg-heading-margin' %}
    {% endif %}
    {% if section.settings.title != blank %}
      <div class="uk-text-center {{ has_border }} ">
        <h1 class="uk-text-center">{{ section.settings.title }}</h1>
        {% if section.settings.sub_title != blank and has_filter == false %}
          <p class="uk-text-center">{{ section.settings.sub_title }}</p>
        {% endif %}
        {%- if settings.display_holly_collection == true -%}
          <span class="fg-collection-holiday">
            {%- include 'icon-holly' -%}
          </span>
        {%- endif -%}
      </div>
    {% endif %}
    {%- if section.settings.display_collection_section == true -%}
      {% assign ripple_effect = section.settings.hover_effect  %}
      <!-- Collection icon section currently includes a filter -->
      {% include 'loop-collection-icons' %}

      {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
      {% endif %}
    {%- endif -%}
  </div>
</section>

{%- if section.settings.image_type == 'image_type_animate' -%}
  {% include 'script-collection-icon-animation' %}
{%- endif -%}

