{%- if section.settings.display_blog_manual -%}
  <section class="uk-section">
    <div class="uk-container">
      {% if section.settings.title != blank %}
        <div class="fg-heading-section uk-width-3-5@l">
          {% if section.settings.title != blank %}
            <h2 class="featured-collection__title">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.sub_title != blank %}
            <div class="uk-text-center">{{ section.settings.sub_title }}</div>
          {% endif %}
        </div>
      {% endif %}
      {% assign article_amount = 'uk-child-width-1-' | append: section.settings.article_count | append: '@l' %}
      {% assign remove_date = true %}
      <div class="uk-section">
        <div class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m {{ article_amount }} uk-grid-small grid-match uk-flex-center" uk-grid>
          {% for block in section.blocks %}
            {% assign card_item = block.settings %}
            {% include 'card-article' %}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{%- endif -%}
{% schema %}
  {
    "name": "Blog Cards",
    "max_blocks": 5,
    "settings": [
      {
        "type": "checkbox",
        "id": "display_blog_manual",
        "default": true,
        "label": "Display Blog Section"
      },
      {
        "type" : "text",
        "id"   : "title",
        "label": "Section Title"
      },
      {
        "type" : "richtext",
        "id"   : "sub_title",
        "label": "Section Sub-Title"
      },
      {
        "type": "range",
        "id": "article_count",
        "label": "Article Amount",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 5
      }
    ],
    "blocks": [
      {
        "type": "select",
        "name": "Add Section",
        "settings": [
          {
            "type":   "text",
            "id":     "title",
            "label":  "Blog title"
          },
          {
            "type":   "richtext",
            "id":     "excerpt",
            "label":  "Blog Excerpt"
          },
          {
            "type":   "url",
            "id":     "url",
            "label":  "Blog url"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Blog image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Blog Section Manual",
        "category": "Section"
      }
    ]
  }
{% endschema %}

