{% include 'nav-bread-crumbs' %}
<section class="uk-section">
  <div class="uk-container">
    <div class="fg-activate-account-password uk-flex-center uk-child-width-1-2@s" uk-grid>
      <div>
        <h1>{{ 'customer.activate_account.title' | t }}</h1>
        <p>{{ 'customer.activate_account.subtext' | t }}</p>

        {% form 'activate_customer_password' %}
          {{ form.errors | default_errors | replace: 'class="errors', 'class="errors uk-width-1-1 uk-width-1-2@s"' }}

          <div class="uk-margin">
            <label for="CustomerPassword" class="uk-form-label">
              {{ 'customer.activate_account.password' | t }}
            </label>
            <div class="uk-form-controls">
              <input type="password"
                class="uk-input uk-form-width-large"
                name="customer[password]"
                id="CustomerPassword"
                placeholder="{{ 'customer.activate_account.password' | t }}">
            </div>
          </div>

          <div class="uk-margin">
            <label for="CustomerPasswordConfirmation" class="uk-form-label">
              {{ 'customer.activate_account.password_confirm' | t }}
            </label>
            <div class="uk-form-controls">
              <input type="password"
                class="uk-input uk-form-width-large"
                name="customer[password_confirmation]"
                id="CustomerPasswordConfirmation"
                placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
            </div>
          </div>
          <input type="submit" class="uk-button uk-button-primary uk-margin-small" value="{{ 'customer.activate_account.submit' | t }}">
          <input type="submit" class="uk-margin-small uk-button uk-button-primary" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
        {% endform %}
      </div>
    </div>
  </div>
</section>