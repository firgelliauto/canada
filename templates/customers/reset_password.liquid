{% include 'nav-bread-crumbs' %}
<section class="uk-section">
  <div class="uk-container">
    <div class="fg-reset-account-password uk-flex-center uk-child-width-1-2@s" uk-grid>
      <div>
        <h1>{{ 'customer.reset_password.title' | t }}</h1>

        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {% form 'reset_customer_password' %}
          {{ form.errors | default_errors | replace: 'class="errors', 'class="errors uk-width-1-1 uk-width-1-2@s"' }}
          <div class="uk-margin">
            <label for="ResetPassword" class="uk-form-label">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <div class="uk-form-controls">
              <input type="password"
                name="customer[password]"
                id="ResetPassword"
                class="uk-input uk-form-width-large {% if form.errors contains 'password' %}input-error{% endif %}"
                placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>
          </div>
          <div class="uk-margin">
            <label for="PasswordConfirmation" class="uk-form-label">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="uk-form-controls">
              <input type="password"
                name="customer[password_confirmation]"
                id="PasswordConfirmation"
                class="uk-input uk-form-width-large {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>
          </div>
            <input type="submit" class="uk-button uk-button-primary uk-margin-small" value="{{ 'customer.reset_password.submit' | t }}">
       
        {% endform %}
      </div>
    </div>
  </div>
</section>