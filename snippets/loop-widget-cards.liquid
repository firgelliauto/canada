<ul class="uk-flex uk-flex-center js-filter uk-grid-small uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@l" uk-grid uk-grid uk-scrollspy="cls: uk-animation-fade; target: > li; delay: 150; ">
  {% for block in section.blocks %}
    {% if block.settings.hide_widget != true %}
      {% assign widget_url = widget_path_base_url %}
      {% if block.settings.widget_type != 'standard-hatch-lift' %}
        {% assign widget_url = widget_url | append: '?type=' | append: block.settings.widget_type %}
      {% endif %}
      {% assign icon_image = icon_image_base_url | append: block.settings.widget_type %}
      {% assign widget_title = block.settings.title %}
      <li class="fg-list-item-widget" >
        {% if block.settings.widget_type != 'more-coming' %}
          <div class="fg-card__widget-icon">
            <a href="{{ widget_url }}" title="See our {{ widget_title }} Calculator" target="_blank" class="fg-card__widget-url">
              <div class="fg-card_reveal">
                {{ block.settings.applications }}
              </div>
              <div class="fg-card__widget-content">
                  {% include 'card-widget' %}
              </div>
            </a>
          </div>
        {% else %}
          <div class="fg-card__widget-icon_padding">
            <div class="fg-card-widget-icon__title">
              {{ widget_title }}      
            </div>
            {{ block.settings.applications }}
          </div>
        {% endif %}
      </li>
    {% endif %}
  {% endfor %}
</ul>
