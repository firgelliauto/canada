<img
  class="fg-responsive-image__image_card"
  {% if lazy_load_images == false %}
    srcset="
      {%- if image_src.width > 180 -%}{{ image_src | img_url: '180x' }} 180w, {%- endif -%}
      {%- if image_src.width > 350 -%}{{ image_src | img_url: '350x' }} 350w, {%- endif -%}
      {%- if image_src.width > 400 -%}{{ image_src | img_url: '400x' }} 400w, {%- endif -%}
      {%- if image_src.width > 500 -%}{{ image_src | img_url: '500x' }} 500w, {%- endif -%}
      {%- if image_src.width > 600 -%}{{ image_src | img_url: '600x' }} 600w, {%- endif -%}
      {%- if image_src.width > 700 -%}{{ image_src | img_url: '700x' }} 700w, {%- endif -%}
      {%- if image_src.width > 800 -%}{{ image_src | img_url: '800x' }} 800w {%- endif -%}
      "
  {% else %}
    data-src="{{ image_src | img_url: '300x' }}"
    data-srcset="
      {%- if image_src.width > 180 -%}{{ image_src | img_url: '180x' }} 180w, {%- endif -%}
      {%- if image_src.width > 350 -%}{{ image_src | img_url: '350x' }} 350w, {%- endif -%}
      {%- if image_src.width > 400 -%}{{ image_src | img_url: '400x' }} 400w, {%- endif -%}
      {%- if image_src.width > 500 -%}{{ image_src | img_url: '500x' }} 500w, {%- endif -%}
      {%- if image_src.width > 600 -%}{{ image_src | img_url: '600x' }} 600w, {%- endif -%}
      {%- if image_src.width > 700 -%}{{ image_src | img_url: '700x' }} 700w, {%- endif -%}
      {%- if image_src.width > 800 -%}{{ image_src | img_url: '800x' }} 800w {%- endif -%}
      "
    uk-img
  {% endif %}
  src="{{ image_src | img_url: '600x' }}"
  data-aspectratio="{{ image_src.aspect_ratio }}"
  data-sizes="auto"
  tabindex="-1"
  alt="{{ image_alt | escape }}"
>
<noscript>
  <img class="" src="{{ image_src | img_url: '300x300' }}" alt="{{ image_src.alt | escape }}">
</noscript>
