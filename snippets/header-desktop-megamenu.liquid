
<nav role="navigation" class="itg--nav">
  <ul class="itg_main ">
     {%- for block in section.blocks -%}
    {%- for link in linklists[block.settings.linklist].links -%}

    
      <li class="itg_main_link {{ link.handle }}" id="{{ link.handle }}">
        <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %} class="uk-icon">
          {{ link.title }}
           {%- if link.links != blank -%}
          {% comment %}<svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"> <polyline fill="none" stroke="#000" stroke-width="1.03" points="16 7 10 13 4 7"></polyline></svg>{% endcomment %}
          {% endif %}
        </a>

        {%- if link.links != blank -%}
          <ul class="ul-{{ link.handle }} itg_child {%-if child_link.links != blank-%}megamenu{%-endif-%}" id="ul-{{ link.handle }}">
            {%- for child_link in link.links -%}
              <li class="itg_child_link {{ child_link.handle }}">
                <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                  {{ child_link.title }}
                </a>

                {%- if child_link.links != blank -%}
                  <ul class="itg_grandchild {{ child_link.handle }}">
                    {%- for grandchild_link in child_link.links -%}
                      {% if grandchild_link.handle == "mounting-brackets" or grandchild_link.handle == "micro-motors" or grandchild_link.handle == "robotic-parts" or grandchild_link.handle == "b-drawer-slides-b" or grandchild_link.handle == "b-mini-linear-slide-rails-b" %}
                      <li class="itg_grandchild_link {{ grandchild_link.handle }}">
                        <a style="padding: 8px 5px 0 0" href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          {{ grandchild_link.title }}
                        </a>
                      </li>
                    {% else %}
                    	<li class="itg_grandchild_link {{ grandchild_link.handle }}">
                        	<a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                          		{{ grandchild_link.title }}
                        	</a>
                      </li>
                    {% endif %}
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}

      </li>
    {%- endfor -%}
     {%- endfor -%}
     <li class="fg-navbar-nav__list-item">
        <a href="/cart"
            class="fg-nav__topper_icon-align js-veiw-cart_nav
                    {% if template.name == 'cart' %}
                      active
                    {% endif %}">
          <span uk-icon="icon: cart; ratio: 1.5" class="fg-icon-left"></span>
          
          {% if template contains 'cart' %}
            <span id="cart" style="display:none" class="js-cart-item-count uk-badge fg-cart__badge-overlay" data-cart-view="data-cart-view">
              { cart.item_count }
            </span>
          {% else %}
            <span id="cart" style="display:none" class="js-cart-item-count uk-badge fg-cart__badge-overlay">
              {{ cart.item_count }}
            </span>
          {% endif %}
          
        </a>
      </li>
  </ul>
</nav>


