{% paginate blog.articles by 25 %}
  {% assign max_grid_size = 'uk-child-width-1-' | append: section.settings.grid_size | append: '@l' %}
  <div class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m  {{ max_grid_size }} uk-grid-medium " uk-grid="masonry: true">
    {% for article in blog.articles %}
      {% if forloop.first == true %}
        {% assign card_item_first = true %}
      {% else %}
        {% assign card_item_first = false %}
      {% endif %}
      {% assign card_item = article %}
      {% render 'card-article' with card_item: card_item, index_first: card_item_first %}
    {% endfor %}
  </div>
  {% if paginate.pages > 1 %}
    {% render 'pagination' with paginate: paginate %}
  {% endif %}
{% endpaginate %}
